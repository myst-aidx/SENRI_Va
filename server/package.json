{
    "name": "fortune-telling-backend",
    "version": "1.0.0",
    "description": "Backend for fortune telling app (authentication + subscription)",
    "main": "index.js",
    "scripts": {
        "test": "jest --config jest.config.cjs",
        "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
        "frontend": "vite",
        "backend": "ts-node server/app.ts"
    },
    "dependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/ioredis": "^5.0.0",
        "@types/react-toastify": "^4.0.2",
        "bcrypt": "^5.1.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.20.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "ioredis": "^5.3.2",
        "jsonwebtoken": "^9.0.0",
        "mongoose": "^7.5.0",
        "react-toastify": "^11.0.3",
        "winston": "^3.17.0"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/body-parser": "^1.19.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.0",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/mongoose": "^5.11.97",
        "@types/node": "^20.4.8",
        "@types/supertest": "^2.0.12",
        "jest": "^29.5.0",
        "mongodb-memory-server": "^9.1.6",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.1.6"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "setupFilesAfterEnv": [
            "./src/setupTests.ts"
        ],
        "moduleFileExtensions": [
            "ts",
            "js"
        ],
        "testMatch": [
            "**/__tests__/**/*.test.ts"
        ],
        "verbose": true
    }
}
